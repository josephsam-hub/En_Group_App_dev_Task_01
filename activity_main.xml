<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFF9F0">

    <!-- Postcard preview (image + overlay text) -->
    <FrameLayout
        android:id="@+id/postcardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEE"
        android:clipToPadding="false"
        android:padding="6dp">

        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_photo_24"
            android:contentDescription="background" />

        <!-- subtle overlay to make text readable -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/storyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click Generate to create a story!"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:padding="20dp"
                android:lineSpacingExtra="6dp"
                android:gravity="center" />
        </ScrollView>
    </FrameLayout>

    <!-- Controls -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/generateBtn"
                style="?android:attr/buttonStyleSmall"
                android:text="Generate" />

            <Button
                android:id="@+id/pickBtn"
                android:layout_marginLeft="8dp"
                style="?android:attr/buttonStyleSmall"
                android:text="Pick BG" />

            <Button
                android:id="@+id/emojiBtn"
                android:layout_marginLeft="8dp"
                style="?android:attr/buttonStyleSmall"
                android:text="Add Emoji" />

            <Button
                android:id="@+id/speakBtn"
                android:layout_marginLeft="8dp"
                style="?android:attr/buttonStyleSmall"
                android:text="Speak" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_marginLeft="8dp"
                style="?android:attr/buttonStyleSmall"
                android:text="Save" />

            <Button
                android:id="@+id/shareBtn"
                android:layout_marginLeft="8dp"
                style="?android:attr/buttonStyleSmall"
                android:text="Share" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
